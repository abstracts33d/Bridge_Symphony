extends layout.pug

block content
	+carousel("presentation",[{image:"../images/1.jpg",h1:carousel_h1_1,button:{caption:carousel_caption_1,url:"#F1"}},{image:"../images/2.jpg",h1:carousel_h1_2,button:{caption:carousel_caption_2,url:"#F2"}},	{image:"../images/3.jpg",h1:carousel_h1_3,button:{caption:carousel_caption_3,url:"#F3"}},{image:"../images/4.jpg",h1:carousel_h1_4,button:{caption:carousel_caption_4,url:"#F4"}}])

	.container.marketing
		p#F1
		hr.featurette-divider
		.row.featurette
			.col-md-7
				h2(class='featurette-heading') #{feature1_h2}
					span.text-muted #{feature1_h2_sub}
				p.lead #{feature1_p}

			.col-md-5
				<img class="featurette-image img-responsive center-block" data-src="holder.js/500x500/auto" alt="500x500" src="../images/1b.jpg" data-holder-rendered="true">

		p#F2
		hr.featurette-divider
		.row.featurette
			.col-md-7.col-md-push-5
				h2(class='featurette-heading') #{feature2_h2}
					span.text-muted #{feature2_h2_sub}
				p.lead #{feature2_p}

			.col-md-5.col-md-pull-7
				<img class="featurette-image img-responsive center-block" data-src="holder.js/500x500/auto" alt="500x500" src="../images/2b.jpg" data-holder-rendered="true">

		p#F3
		hr.featurette-divider
		.row.featurette
			.col-md-7
				h2(class='featurette-heading') #{feature3_h2}
					span.text-muted #{feature3_h2_sub}
				p.lead #{feature3_p}

			.col-md-5
				<img class="featurette-image img-responsive center-block" data-src="holder.js/500x500/auto" alt="500x500" src="../images/3b.jpg" data-holder-rendered="true">

		p#F4
		hr.featurette-divider
		.row.featurette
			.col-md-7.col-md-push-5
				h2(class='featurette-heading') #{feature4_h2}
					span.text-muted #{feature4_h2_sub}
				p.lead #{feature4_p}

			.col-md-5.col-md-pull-7
				<img class="littledown featurette-image img-responsive center-block" data-src="holder.js/500x500/auto" alt="500x500" src="../images/4b.jpg" data-holder-rendered="true">

		hr.featurette-divider

		br
		br
		br
		br
		br
		p
