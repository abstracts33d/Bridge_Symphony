extends layout.pug

block append head
	title= "Bridge Symphony - Contact"
	meta(name="description" content="Contactez Bridge Symphony le support didactique pour l enseignement du bridge et l'outil de progression innovant pour bridgeurs de tous niveaux")

	block append style
		<link rel="stylesheet" href="css/screen.css">
		<link rel="stylesheet" href="css/print.css" media="print">
		<link rel="stylesheet" href="css/table.css">


block content
	mixin title(name,numbr)
		div(class="entete")
			span(class="log") <img src="images/logo.png"/>
			span(class="ttle")= name
			span(class="numb")= numbr



	div(id="container" class="backgroundcontainer")
		div(id="output" class="backgroundcontainer")
	div(id="controls" style="display: none;" class="controls")

	.container

			.col-md-12
				- var list = ["Main", "Ouv"]
				table(border="1")
					thead
						tr
							th(colspan=9)
								+title('Encheres a deux', "100-1")

						tr
							th(colspan=9) Ouverture
						tr
							- for (var i = 0; i < 3; ++i) {
								each value, index in list
									th=value
							- }

					tbody
					- for (var i = 0; i < 10; ++i) {
						tr(class=(i % 2 == 0) ? 'odd' : 'even')
							- for (var j = 0; j < 3; ++j) {
									td
										include selector_cards.pug
									td
										include select_colors.pug
							- }
					- }

				- var list = ["Ouv n°1", "Int n°2"]
				table(border="1")
					thead
						tr
							th(colspan=9)
								+title('Encheres competitives', "100-2")

						tr
							th(colspan=9) ...Intervention du numero 2...
						tr
							- for (var i = 0; i < 3; ++i) {
								each value, index in list
									th=value
								th(width=100)
							- }
						tr
							- for (var i = 0; i < 3; ++i) {
								th
								th
									include selector_cards.pug
								th
							- }

					tbody
					- for (var i = 0; i < 10; ++i) {
						tr(class=(i % 2 == 0) ? 'odd' : 'even')
							- for (var j = 0; j < 3; ++j) {
									td
										include select_colors.pug
									td
										include select_colors.pug
									td
							- }
					- }



				- var list = ["Ouverture", "A1", "A2", "A3", "A4"]
				table(border="1")
					thead
						tr
							th(colspan=6)
								+title("Encheres a deux", "200-1"	)

						tr
							th(colspan=6) Reponses aux ouvertures de ...
						tr
							each value, index in list
								th=value
							th(width=300)

					tbody
					- for (var i = 0; i < 10; ++i) {
						tr(class=(i % 2 == 0) ? 'odd' : 'even')
							each value, index in list
								td
									include select_colors.pug
							td
					- }




				- var list = ["---", "Rep ", "Red", "Re-Rép", "Re-Red"	]
				table(border="1")
					thead
						tr
							th(colspan=6)
								+title('Encheres a deux', "200-2")
						tr
							th(colspan=2) Réponse à l ouverture de -->
							th
								include select_colors.pug
							th(colspan=2) et developpements Main:
							th
								include selector_cards.pug
						tr
								each value, index in list
									th=value
								th(width=300)

					tbody

					- for (var i = 0; i < 10; ++i) {

						tr(class=(i % 2 == 0) ? 'odd' : 'even')
							td
								include selector_cards.pug
							- for (var j = 0; j < 4; ++j) {
								td
									include select_colors.pug
							- }
							td
					- }


				- var list = ["Ouv (n°1)", "Int(n°2)", "n°3", "Rép (n°4)"]
				table(border="1")
					thead
						tr
							th(colspan=5)
								+title('Encheres competitives', "300-1")

						tr
							th(colspan=5) Réponse (n°4) à l intervention du partenaire (n°2)
						tr
								each value, index in list
									th=value
								th(width=300)

					tbody
						td(rowspan=11)
							include select_colors.pug
						- for (var i = 0; i < 10; ++i) {

							tr(class=(i % 2 == 0) ? 'odd' : 'even')
								td
									include select_colors.pug
								td
									include select_colors.pug
								td
									include select_colors.pug
								td
						- }
						tr
							td
							td
							td
							td
								include selector_cards.pug
							td


				- var list = ["Ouv n°1", "Int n°2", "Rép n°3"	]
				table(border="1")
					thead
						tr
							th(colspan=5)
								+title('Encheres competitives', "400-1")

						tr
							th(colspan=5) Réponses à l'ouverture du partenaire (n°1) après interventions du n°2
						tr
								each value, index in list
									th=value
								th(width=300)

					tbody
						td(rowspan=11)
							include select_colors.pug
						- for (var i = 0; i < 10; ++i) {

							tr(class=(i % 2 == 0) ? 'odd' : 'even')
								td
									include select_colors.pug
								td
									include select_colors.pug
								td
						- }
						tr
							td
							td
							td
								include selector_cards.pug
							td



block append scripts
	script(src='js/triangles-contact-min.js')
